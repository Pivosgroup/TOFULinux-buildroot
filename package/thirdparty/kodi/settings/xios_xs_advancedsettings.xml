<?xml version="1.0" encoding="UTF-8"?>
<advancedsettings>
  <hidebattery>1</hidebattery>
  <hidecpurev>1</hidecpurev>
  <hidecpuserial>1</hidecpuserial>
  <hidetotaluptime>1</hidetotaluptime>
  <showexitbutton>false</showexitbutton>

  <samba>
    <clienttimeout>30</clienttimeout>
  </samba>

  <audio>
    <excludefromlisting>
      <regexp>/media/sdcard/$</regexp>
      <regexp>/media/cardblksd[1-9]/$</regexp>
    </excludefromlisting>
  </audio>

  <video>
    <excludefromlisting>
      <regexp>/media/sdcard/$</regexp>
      <regexp>/media/cardblksd[1-9]/$</regexp>
    </excludefromlisting>
  </video>
  
  <pictureexcludes>
    <regexp>/media/sdcard/$</regexp>
    <regexp>/media/cardblksd[1-9]/$</regexp>
  </pictureexcludes>
  
  <network>
    <readbufferfactor>4.0</readbufferfactor>
    <buffermode>1</buffermode>
  </network>

  <pvr>
    <minvideocachelevel>5</minvideocachelevel>
    <minaudiocachelevel>20</minaudiocachelevel>
  </pvr>

  <powermanagement>
    <shutdownstate>3</shutdownstate>
  </powermanagement>
</advancedsettings>
